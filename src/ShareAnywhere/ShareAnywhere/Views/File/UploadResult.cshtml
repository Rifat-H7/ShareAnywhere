@{
    ViewData["Title"] = "Upload Complete";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
<style>
    body {
        background-color: #f3f4f6;
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }

    .fluent-card {
        background: #ffffff;
        border-radius: 16px;
        box-shadow: 0 4px 20px rgba(0, 0, 0, 0.06);
        padding: 2rem;
        max-width: 500px;
        margin: 3rem auto;
        text-align: center;
        transition: transform 0.2s;
    }

        .fluent-card:hover {
            transform: scale(1.01);
        }

    h2 {
        font-weight: 700;
        color: #0078d7;
        margin-bottom: 1rem;
    }

    p {
        font-size: 1.1rem;
        color: #333;
    }

    strong {
        font-size: 1.2rem;
        color: #0078d7;
    }

    a {
        color: #0078d7;
        text-decoration: none;
        font-weight: 600;
    }

        a:hover {
            text-decoration: underline;
        }
</style>

<div class="fluent-card">
    <h2>File Uploaded!</h2>
    <p>Share this code: <strong>@ViewBag.Code</strong></p>
    <p>Download URL:<br /><a href="@ViewBag.DownloadLink">@ViewBag.DownloadLink</a></p>
</div>
